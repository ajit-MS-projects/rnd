<UserControl x:Class="SilverLightClient.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" Loaded="UserControl_Loaded">
    <Canvas >
             <sdk:DataGrid x:Name="grdData" AutoGenerateColumns="True" 
    GridLinesVisibility="None" HeadersVisibility="All"
    RowBackground="Cornsilk" AlternatingRowBackground="LemonChiffon"
    ColumnWidth="85" RowHeight="30"
    IsReadOnly="True" CanUserResizeColumns="False"
    >
    </sdk:DataGrid>
    <Button Content="Load Data" Height="23" HorizontalAlignment="Left" Margin="263,388,0,0" Name="btnLoad"  VerticalAlignment="Top" Width="75" Click="btnLoad_Click" />
    </Canvas>
   
    
</UserControl>
